    <div class="container bg-light rounded-4 m-auto p-5 mt-5 mb-5 w-50">
      <h2 class="text-center fs-4">Update My Project</h2>
      <form method="post" action="edit_project">
        <div class="mb-3">
          <label for="title" class="form-label fs-4"></label>
          <input
            type="text"
            class="form-control border border-black"
            name="title"
            id="title"
            aria-describedby="emailHelp"
            value="{{data.title}}"
          />
        </div>

        <div class="mb-3">
          <div class="row">
            <div class="col">
              <label for="startDate" class="form-label fs-4">Start Date</label>
              <input
                type="date"
                class="form-control border border-black"
                placeholder="First name"
                aria-label="First name"
                name="startDate"
                id="startDate"
              />
            </div>
            <div class="col">
              <label for="endDate" class="form-label fs-4">End Date</label>
              <input
                type="date"
                class="form-control border border-black"
                placeholder="Last name"
                aria-label="Last name"
                name="endDate"
                id="endDate"
              />
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="content" class="form-label fs-4">Content</label>
          <textarea
            class="form-control border border-black"
            id="content"
            name="content"
            style="height: 200px; resize: none"
          >{{data.content}}</textarea>
        </div>

        <div class="mb-3">
          <label for="" class="form-label fs-4">Technologies</label>
          <div class="d-flex">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="Java"
                name="Java"
                {{#if data.Java}}checked{{/if}}
              />
              <label class="form-check-label" for="Java">
                Java
              </label>
            </div>
            <div class="form-check" style="margin-left: 200px;">
              <input
                class="form-check-input"
                type="checkbox"
                id="NodeJS"
                name="NodeJS"
              {{#if data.NodeJS}}checked{{/if}}
              />
              <label class="form-check-label" for="NodeJS">
                NodeJS
              </label>
            </div>
          </div>
          <div class="d-flex">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="Golang"
                name="Golang"
              {{#if data.Golang}}checked{{/if}}
              />
              <label class="form-check-label" for="Golang">
                Golang
              </label>
            </div>
            <div class="form-check" style="margin-left: 179px;">
              <input
                class="form-check-input"
                type="checkbox"
                id="ReactJS"
                name="ReactJS"
                {{#if data.ReactJS}}checked{{/if}}
              />
              <label class="form-check-label" for="ReactJS">
                ReactJS
              </label>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="uploadimage" class="form-label fs-4">Upload Image</label>
          <input
            type="file"
            class="form-control border border-black"
            id="uploadimage"
            aria-describedby="inputGroupFileAddon04"
            aria-label="Upload"
          />
        </div>

        <div class="d-flex justify-content-end mt-5">
          <button type="submit" class="btn btn-danger px-5 py-3">Submit</button>
        </div>
      </form>
