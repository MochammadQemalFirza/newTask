          <div class="d-flex flex-row">
            <div class="me-2">
              <a
                class="btn btn-danger text-white text-decoration-none"
                href="/contact"
              >Contact</a>
            </div>
            <div class="m-1">
              <a
                href="https://drive.google.com/file/d/1sobOpfrV3Dw21ldZ_M5bCBMszj_rScZs/view?usp=sharing"
                style="text-decoration: none;color: black;"
              >
                download CV
                <i class="fa-solid fa-download"></i></a>
            </div>
          </div>
          <br />
          <div class="d-flex mt-2" style="margin-left: -15px;">
            <a
              href="https://www.linkedin.com/in/mochammad-qemal-firza-9aa351233"
            >
              <i
                class="fa-brands fa-linkedin fa-2xl"
                style="margin-left: 15px; color: black;"
              ></i>
            </a>
            <a href="https://www.facebook.com/cemal.firza1/">
              <i
                class="fa-brands fa-facebook fa-2xl"
                style="margin-left: 15px; color: black;"
              ></i>
            </a>
            <a href="https://www.instagram.com/qemal_firza/">
              <i
                class="fa-brands fa-instagram fa-2xl"
                style="margin-left: 15px; color: black;"
              ></i>
            </a>
            <a href="https://github.com/MochammadQemalFirza">
              <i
                class="fa-brands fa-github fa-2xl"
                style="margin-left: 15px; color: black;"
              ></i>
            </a>
          </div>
        </div>
        <div
          class="right bg-light rounded-4"
          style="box-shadow:0 0 20px #666666;"
        >
          <img
            class="img-fluid rounded-top"
            src="images/image.jpeg"
            alt="gambar gwej"
          />
          <p class="text-center fw-bold mt-2">Mochammad Qemal Firza</p>
          <p class="text-center">BackEnd Developer</p>
        </div>
      </section>
    </div>
    <!-- myProject -->
    <div class="bg-body-secondary p-3">
      <h1 class="fw-bold text-center">MY PROJECT</h1>
    </div>

    <div class="row row-cols-3 row-cols-md-3 bg-body-secondary m-auto pt-3">
      {{#each dataBlog}}
        <div class="col">
          <div class="card m-auto mb-5" style="box-shadow:0 0 20px #666666;">
            <img
              src="{{this.image}}"
              class="card-img-top p-3 rounded-top"
              style="height:500px; object-fit: cover"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title">
                <a
                  class="text-decoration-none text-black m-0 p-0 fs-3"
                  href="/project-detail/{{this.id}}"
                >{{this.title}}</a>
              </h5>
              <p class="card-text">{{this.postedAt}}</p>
              <p class="card-text">{{this.duration}} | {{this.author}}</p>
              <p
                class="card-text"
                style="text-align: justify; height: 50px; overflow: hidden"
              >{{this.content}}</p>
            </div>
            <div class="ms-3 mb-3">
              {{#if this.nodejs}}
                <i class="fa-brands fa-node" style="color: #000000"></i>
              {{else}}

              {{/if}}
              {{#if this.golang}}
                <i class="fa-brands fa-golang" style="color: #000000;"></i>
              {{else}}

              {{/if}}
              {{#if this.reactjs}}
                <i class="fa-brands fa-react" style="color: #000000;"></i>
              {{else}}

              {{/if}}
              {{#if this.java}}
                <i class="fa-brands fa-java" style="color: #000000;"></i>
              {{else}}

              {{/if}}
            </div>
            <div class="d-flex justify-content-center mb-3">
              {{#if isLogin}}
                <a
                  href="/edit-project/{{this.id}}"
                  class="rounded-3 w-25 btn btn-secondary"
                >Edit</a>
                <a
                  href="/delete-project/{{this.id}}"
                  class="ms-1 rounded-3 w-25 btn btn-secondary"
                >Delete</a>
              {{/if}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <script src="js/index.js"></script>
  </body>

</html>

