      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="images/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ps-5 pe-3">
              <a
                class="nav-link active fs-4 text-danger"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-4" href="/project">My Project</a>
            </li>
          </ul>
          <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a class="nav-link" href="#">Hello, {{nameUser}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/register">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>
            <a class="btn btn-danger btn-submit ms-5" href="/contact">Contact Me</a>
          </div>
        </div>
      </div>
    </nav>
